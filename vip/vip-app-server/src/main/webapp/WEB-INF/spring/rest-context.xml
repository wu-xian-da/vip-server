<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd"
	xmlns:c="http://www.springframework.org/schema/c" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util">
	
	<bean id="openServiceFilter" class="com.jianfei.frame.web.filter.CheckOpenServiceFilter">
 		<property name="messageConverter" ref="errorRequestMessageConverter" />
 		<property name="handlerMapping" ref="requestMappingHandlerMapping" />
	</bean>
	
	<bean id="CORSFilter" class="com.jianfei.frame.web.filter.CORSFilter" />

	<bean id="requestMappingHandlerMapping" class="com.jianfei.frame.spring.rest.ServiceMethodHandlerMapping">
		<property name="order" value="0" />
	</bean>
	
	<bean class="com.jianfei.frame.spring.RequestMappingHandlerAdapterFactoryBean">
		<property name="messageConverters" ref="messageConverters" />
	</bean>
	
	<bean class="com.jianfei.frame.spring.DefaultHandlerExceptionResolver">
		<property name="order" value="0" />
		<property name="messageConverter" ref="errorRequestMessageConverter" />
	</bean>
	
	<bean id="errorRequestMessageConverter" class="com.jianfei.frame.error.support.ErrorRequestMessageConverter">
		<property name="jsonMessageConverter" ref="jsonMessageConverter" />
		<property name="xmlMessageConverter" ref="xmlMessageConverter" />
	</bean>
	
	<bean id="jsonMessageConverter" class="com.jianfei.frame.spring.MappingJackson2HttpMessageConverterExt"></bean>
	<bean id="xmlMessageConverter" class="com.jianfei.frame.spring.Jaxb2RootElementHttpMessageConverterExt"></bean>
	<util:list id="messageConverters">
		<ref bean="jsonMessageConverter"/>
		<ref bean="xmlMessageConverter"/>
	</util:list>
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="UTF-8" />
	</bean>
</beans>

